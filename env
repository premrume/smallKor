#/bin/bash

# Brute force

# PUT your files into dataOriginal
DATA_ORIG=./dataOriginal
DATA_OUT=./data


# UPDATE THIS TO MATCH your file names
SRC_TEST_FILE=kor-test.txt
SRC_TRAIN_FILE=kor-train.txt
TGT_TEST_FILE=en-test.txt
TGT_TRAIN_FILE=en-train.txt

export SRC_TEST=${DATA_ORIG}/${SRC_TEST_FILE)
export SRC_TRAIN=${DATA_ORIG}/{SRC_TRAIN_FILE)
export TGT_TEST=${DATA_ORIG}/${TGT_TEST_FILE}
export TGT_TRAIN=${DATA_ORIG}/${TGT_TRAIN_FILE}

export SRC_TEST_PREP=${DATA_OUT}/${SRC_TEST_FILE}
export SRC_TRAIN_PREP=${DATA_OUT}/${SRC_TRAIN_FILE}
export TGT_TEST_PREP=${DATA_OUT}/{$TGT_TEST_FILE}
export TGT_TRAIN_PREP=${DATA_OUT}/{$TGT_TRAIN_FILE}

# Note src-vocab, tgt-vocab 
export SRC_VOCAB=${DATA_OUT}/src-vocab.txt
export TGT_VOCAB=${DATA_OUT}/tgt-vocab.txt
